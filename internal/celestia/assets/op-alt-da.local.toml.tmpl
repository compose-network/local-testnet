addr = "0.0.0.0"
port = 3100
log_level = "info"
log_format = "text"

[celestia]
# 29-byte v0 namespace (first 18 bytes are zero)
namespace = "{{ .Namespace }}"
blobid_compact = true

# Read path: op-alt-da -> celestia bridge JSON-RPC
bridge_addr = "http://bridge:26658"
bridge_auth_token = ""
bridge_tls_enabled = false

# Write path: op-alt-da -> celestia consensus core gRPC
core_grpc_addr = "celestia:9090"
core_grpc_auth_token = ""
core_grpc_tls_enabled = false

# Signer key config (uses Celestia app keyring volume)
keyring_backend = "test"
keyring_path = "/home/optda/keys"
default_key_name = "validator"
p2p_network = "{{ .ChainID }}"
tx_worker_accounts = 0

[submission]
timeout = "60s"
tx_priority = 2
max_blob_size = "2MB"

[read]
timeout = "30s"

[metrics]
enabled = true
port = 6060

[fallback]
enabled = false
